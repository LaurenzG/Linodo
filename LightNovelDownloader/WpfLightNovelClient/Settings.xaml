<Window x:Class="WpfLightNovelClient.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLightNovelClient" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" MinHeight="102" MaxHeight="102" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Button Name="FolderBtn" Grid.Column="2" Content="..." Margin="2" VerticalContentAlignment="Center" Click="FolderBtn_Click"></Button>
        <TextBlock Name="pathTxt" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center" Margin="0 3 0 0"></TextBlock>
        <Button Name="SaveAsBtn" Grid.Row="1" Background="LavenderBlush" Click="SaveAsBtn_Click"></Button>
        <Button Name="ReturnBtn" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Content="Save and Return" Background="LavenderBlush" Click="ReturnBtn_Click"></Button>
    </Grid>
</Window>
